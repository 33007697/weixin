.title {
  font-size: 40rpx;
  color: red;
  height: 100rpx;
  line-height: 100rpx;
  width: 500rpx;
  margin:20rpx auto;
  border: 1rpx solid #eee;
  border-radius: 20rpx;
  text-align: center;
}
.content{
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  color: blueviolet;
  text-align: center;
  width: 450rpx;
  margin: 0 auto;
}
.content text{
  height: 80rpx;
  line-height: 80rpx;
  text-align: left;
}
.btn{
  background-color: rgb(120, 120, 250);
  border-radius: 20rpx;
}